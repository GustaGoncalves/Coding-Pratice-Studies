lado1=int(input('Digite o primeiro lado: '))
lado2=int(input('Digite o segundo lado: '))
lado3=int(input('Digite o terceiro lado: '))

if lado1+lado2>=lado3 and lado2+lado3>=lado1 and lado1+lado3>=lado2:
    print('Os valores {}, {} e {} podem formar um triângulo'.format(lado1,lado2,lado3))
    if lado1==lado2 and lado2==lado3:
        print('Os lados formam um triângulo equilátero')
    elif lado1!=lado2 and lado2!=lado3 and lado1!=lado3:
        print('Os lados formam um triângulo escaleno')
    else:
        print('Os lados formam um triângulo isóceles')
else:
    print('Os valores {}, {} e {} não podem formar um triângulo'.format(lado1,lado2,lado3))