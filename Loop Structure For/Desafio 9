menordeidade=0
maiordeidade=0
import datetime
for c in range (1,8):
    idade=int(input('Digite a idade da {}º pessoa: '.format(c)))
    anohoje=datetime.date.today().year
    if anohoje-idade<21:
        menordeidade+=1
    else:
        maiordeidade+=1
print('A quantidade de pessoas menores de idade é {}'.format(menordeidade))
print('A quantidade de pessoas maiores de idade é {}'.format(maiordeidade))
